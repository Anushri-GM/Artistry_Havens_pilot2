
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if the user is an artisan.
    // Checks for both the new `userType` and the legacy `role` field for backward compatibility.
    function isArtisan() {
      let userData = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return userData.userType == 'artisan' || userData.role == 'artisan';
    }

    // Helper function to check if a user can create a CustomizationRequest
    function canCreateCustomizationRequest() {
      let data = request.resource.data;
      return request.auth != null
             && data.buyerId == request.auth.uid
             && 'generatedImageUrl' in data
             && data.price > 0
             && data.buyerName.size() > 0
             && data.buyerShippingAddress.size() > 0;
    }

    // Users can read their own profile. Admins can read any profile.
    // A user can create their own profile.
    // A user can update their own profile, but cannot change their role. Admins can update any profile.
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && 
                     (
                       (request.auth.uid == userId && (!('role' in request.resource.data) || request.resource.data.role == resource.data.role) && (!('userType' in request.resource.data) || request.resource.data.userType == resource.data.userType)) ||
                       isAdmin()
                     );
      allow delete: if isAdmin();

      // Rules for the 'notifications' subcollection
      match /notifications/{notificationId} {
        // A user can read, list, and delete their own notifications.
        allow read, list, delete: if request.auth.uid == userId;

        // Allow any authenticated user to create a notification for another user.
        // This is necessary for the client-side fan-out pattern where a buyer
        // creates notifications for multiple artisans.
        // In a production environment, this would ideally be handled by a Cloud Function.
        allow create: if request.auth != null;
      }
    }
    
    // Rules for the 'products' collection
    match /products/{productId} {
      // Anyone can read a product
      allow read: if true;
      // Only an authenticated user who is an artisan can create a product.
      allow create: if request.auth != null && request.resource.data.artisan == /databases/$(database)/documents/users/$(request.auth.uid);
      // The artisan who created the product can update or delete it, or an admin can.
      allow update, delete: if request.auth != null && (get(resource.data.artisan).id == request.auth.uid || isAdmin());
    }

    // Messages can be read by sender/receiver. Only sender can create.
    match /messages/{messageId} {
      allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid;
      allow read: if request.auth != null && (resource.data.senderId == request.auth.uid || resource.data.receiverId == request.auth.uid);
      allow update, delete: if false; // Messages are immutable
    }

    // AI requests can be created by any auth'd user, but only read by the creator or admin.
    match /aiRequests/{requestId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if false;
    }
    
    // Customization Requests
    match /CustomizationRequest/{requestId} {
      // A buyer can create a request for themselves using the helper function.
      allow create: if canCreateCustomizationRequest();

      // An authenticated user can list requests. Client-side queries MUST be secure.
      allow list: if request.auth != null;

      // A user can get a request if:
      // 1. They are the buyer who created it.
      // 2. They are an artisan whose `categories` list contains the request's category.
      allow get: if request.auth != null && (
        resource.data.buyerId == request.auth.uid ||
        (isArtisan() && resource.data.category in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.categories)
      );

      // An artisan can decline a pending request.
      allow update: if request.auth != null && isArtisan() && resource.data.status == 'pending' &&
                    request.resource.data.status == 'rejected' &&
                    resource.data.category in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.categories;

      // An artisan can delete a pending request (as part of 'accepting' it and creating an order).
      allow delete: if request.auth != null && isArtisan() &&
                      resource.data.status == 'pending' &&
                      resource.data.category in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.categories;
    }

    // Rules for Orders
    match /orders/{orderId} {
      // An order can be created by a buyer for a standard product, or by an artisan for a custom product.
      allow create: if request.auth != null &&
                    request.resource.data.status == 'Processing' &&
                    request.resource.data.totalAmount > 0 &&
                    request.resource.data.quantity > 0 &&
                    request.resource.data.shippingAddress.size() > 0 &&
                    'buyerName' in request.resource.data &&
                    'artisanName' in request.resource.data &&
                    'productName' in request.resource.data &&
                    'productImageUrl' in request.resource.data &&
                    (
                      // Standard product order, placed by BUYER
                      (
                        request.resource.data.product != null &&
                        get(request.resource.data.product).data != null &&
                        (!('customizationDetails' in request.resource.data) || request.resource.data.customizationDetails.size() == 0) &&
                        request.resource.data.buyer == /databases/$(database)/documents/users/$(request.auth.uid)
                      ) ||
                      // Custom product order, created by ARTISAN
                      (
                        request.resource.data.product == null &&
                        'customizationDetails' in request.resource.data && request.resource.data.customizationDetails.size() > 0 &&
                        request.resource.data.artisan == /databases/$(database)/documents/users/$(request.auth.uid)
                      )
                    );

      // The buyer who placed the order or the artisan fulfilling it can get the document.
      allow get: if request.auth != null && (
        resource.data.buyer == /databases/$(database)/documents/users/$(request.auth.uid) ||
        resource.data.artisan == /databases/$(database)/documents/users/$(request.auth.uid)
      );

      // Any authenticated user can list orders, but client-side queries MUST be secure.
      allow list: if request.auth != null;

      // The artisan can update the order status.
      allow update: if request.auth != null && resource.data.artisan == /databases/$(database)/documents/users/$(request.auth.uid);
                      
      allow delete: if false; // Orders should generally not be deleted.
    }

    // Attendance, alerts, bookings, and analytics can only be accessed by admins for now
    match /attendance/{docId} {
      allow read, write: if isAdmin();
    }
    match /alerts/{docId} {
      allow read, write: if isAdmin();
    }
     match /bookings/{docId} {
      allow read, write: if isAdmin();
    }
     match /analytics/{docId} {
      allow read, write: if isAdmin();
    }
    
    // Allow the testBackend function to write a test document.
    // This is for demonstration; tighten this rule in production.
    match /tests/{testId} {
      allow create: if true;
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
