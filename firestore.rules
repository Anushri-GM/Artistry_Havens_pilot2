
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users can read their own profile. Admins can read/write any profile.
    match /users/{userId} {
      // Allow read for own profile or if admin
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      // Allow a user to create their own profile document
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow update/delete for own profile or if admin
      allow update, delete: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // Messages can be read by sender/receiver. Only sender can create.
    match /messages/{messageId} {
      allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid;
      allow read: if request.auth != null && (resource.data.senderId == request.auth.uid || resource.data.receiverId == request.auth.uid);
      allow update, delete: if false; // Messages are immutable
    }

    // AI requests can be created by any auth'd user, but only read by the creator or admin.
    match /aiRequests/{requestId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if false;
    }
    
    // Attendance, alerts, bookings, and analytics can only be accessed by admins for now
    match /attendance/{docId} {
      allow read, write: if isAdmin();
    }
    match /alerts/{docId} {
      allow read, write: if isAdmin();
    }
     match /bookings/{docId} {
      allow read, write: if isAdmin();
    }
     match /analytics/{docId} {
      allow read, write: if isAdmin();
    }
    
    // Allow the testBackend function to write a test document.
    // This is for demonstration; tighten this rule in production.
    match /tests/{testId} {
      allow create: if true;
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
