
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if the user is an artisan
    function isArtisan() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'artisan';
    }

    // Users can read their own profile. Admins can read any profile.
    // A user can create their own profile.
    // A user can update their own profile, but cannot change their role. Admins can update any profile.
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && 
                     (
                       (request.auth.uid == userId && (!('role' in request.resource.data) || request.resource.data.role == resource.data.role)) ||
                       isAdmin()
                     );
      allow delete: if isAdmin();
    }
    
    // Rules for the 'products' collection
    match /products/{productId} {
      // Anyone can read a product
      allow read: if true;
      // Only an authenticated user who is an artisan can create a product.
      allow create: if request.auth != null && request.resource.data.artisan == /databases/$(database)/documents/users/$(request.auth.uid);
      // The artisan who created the product can update or delete it, or an admin can.
      allow update, delete: if request.auth != null && (get(resource.data.artisan).id == request.auth.uid || isAdmin());
    }

    // Messages can be read by sender/receiver. Only sender can create.
    match /messages/{messageId} {
      allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid;
      allow read: if request.auth != null && (resource.data.senderId == request.auth.uid || resource.data.receiverId == request.auth.uid);
      allow update, delete: if false; // Messages are immutable
    }

    // AI requests can be created by any auth'd user, but only read by the creator or admin.
    match /aiRequests/{requestId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if false;
    }
    
    // Customization Requests
    match /CustomizationRequest/{requestId} {
      // A buyer can create a request for themselves.
      allow create: if request.auth != null && request.resource.data.buyerId == request.auth.uid;

      // An authenticated user can list requests. Client-side queries MUST be secure.
      allow list: if request.auth != null;

      // A user can get a request if:
      // 1. They are the buyer who created it.
      // 2. They are an artisan whose `categories` list contains the request's category.
      allow get: if request.auth != null && (
        resource.data.buyerId == request.auth.uid ||
        (isArtisan() && resource.data.category in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.categories)
      );

      // An artisan can make an offer, or a buyer can accept/reject it.
      allow update: if request.auth != null && (
          // Artisan makes an offer on a pending request
          (isArtisan() && resource.data.status == 'pending'
           && request.resource.data.status == 'quoted'
           && request.resource.data.artisanId == request.auth.uid
           && request.resource.data.price > 0)
          ||
          // Buyer accepts or rejects a quoted offer
          (resource.data.buyerId == request.auth.uid
           && resource.data.status == 'quoted'
           && (request.resource.data.status == 'accepted' || request.resource.data.status == 'rejected'))
      );
                    
      allow delete: if false; // Immutable for now
    }

    // Rules for Orders
    match /orders/{orderId} {
      // A buyer can create an order, and the buyer ID must match their own.
      allow create: if request.auth != null 
                    && request.resource.data.buyer == /databases/$(database)/documents/users/$(request.auth.uid)
                    && 'artisanName' in request.resource.data
                    && 'buyerName' in request.resource.data
                    && 'productName' in request.resource.data
                    && 'productImageUrl' in request.resource.data
                    && 'totalAmount' in request.resource.data;

      // The buyer who placed the order or the artisan fulfilling it can get the document.
      allow get: if request.auth != null && (
        resource.data.buyer == /databases/$(database)/documents/users/$(request.auth.uid) ||
        resource.data.artisan == /databases/$(database)/documents/users/$(request.auth.uid)
      );

      // Any authenticated user can list orders, but client-side queries MUST be secure.
      allow list: if request.auth != null;

      // The artisan can update the order status.
      allow update: if request.auth != null && resource.data.artisan == /databases/$(database)/documents/users/$(request.auth.uid);
                      
      allow delete: if false; // Orders should generally not be deleted.
    }

    // Attendance, alerts, bookings, and analytics can only be accessed by admins for now
    match /attendance/{docId} {
      allow read, write: if isAdmin();
    }
    match /alerts/{docId} {
      allow read, write: if isAdmin();
    }
     match /bookings/{docId} {
      allow read, write: if isAdmin();
    }
     match /analytics/{docId} {
      allow read, write: if isAdmin();
    }
    
    // Allow the testBackend function to write a test document.
    // This is for demonstration; tighten this rule in production.
    match /tests/{testId} {
      allow create: if true;
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
